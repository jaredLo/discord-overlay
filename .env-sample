OPENAI_API_KEY=xxx

# ASR backend
# Options: openai | remote | local
# For OpenAI Whisper (whisper-1):
ASR_BACKEND=openai
WHISPER_MODEL=whisper-1

# If using a self-hosted whisper server, uncomment these and set backend to 'remote'
# ASR_BACKEND=remote
# REMOTE_ASR_URL=http://127.0.0.1:8585/api/transcribe

# Audio capture and VAD
TARGET_DEVICE=BlackHole
VAD_LEVEL=1
SILENCE_HANG_MS=500
MIN_CHUNK_SEC=0.2
MAX_CHUNK_SEC=4.0
CHUNK_OVERLAP_MS=200
CAPTURE_ALL=true

# GPT formatter
# For two-line GPT output (colored JP + EN)
OPENAI_MODEL=gpt-4.1-nano-2025-04-14
USE_GPT_FORMATTER=true
GPT_COMPRESS_ELONGATIONS=false
GPT_MAX_VOCAB=10
GPT_MAX_CHARS=280
GPT_RATE_LIMIT_MS=600
GPT_CLEAN_REPEATS=true
GPT_SKIP_ON_REPEAT=false
LINE4_TABLE_MODE=false
JP_VERBATIM=false

# Concurrency/timeouts
ASR_WORKERS=3
FORMAT_WORKERS=8
REMOTE_ASR_TIMEOUT_MS=15000

# Optional override endpoints
# OPENAI_AUDIO_URL=https://api.openai.com/v1/audio/transcriptions
# OPENAI_CHAT_URL=https://api.openai.com/v1/chat/completions

# Optional translation (per-utterance DeepL)
# DEEPL_API_KEY=

# Output lines (two-line style by default)
SHOW_VOCAB_LINE=false
SHOW_DETAILS_LINE=false
