# ==========================
# Common (applies to all)
# ==========================

# Audio capture and VAD
TARGET_DEVICE=BlackHole
VAD_LEVEL=1
SILENCE_HANG_MS=500
MIN_CHUNK_SEC=0.2
MAX_CHUNK_SEC=4.0
CHUNK_OVERLAP_MS=200
CAPTURE_ALL=true

# Output lines and sidebars
SHOW_VOCAB_LINE=true
SHOW_DETAILS_LINE=true
SHOW_ASR_DEBUG=true
SUGGESTIONS_ENABLED=true
JISHO_REMOTE_ENABLED=true

# Concurrency / timeouts
ASR_WORKERS=3
FORMAT_WORKERS=8
REMOTE_ASR_TIMEOUT_MS=15000


# Required
OPENAI_API_KEY=xxx
ASR_BACKEND=remote
WHISPER_MODEL=whisper-1

# GPT formatter (processed JP + EN + vocab/suggestions)
USE_GPT_FORMATTER=true
OPENAI_MODEL=gpt-4.1-nano-2025-04-14
GPT_RATE_LIMIT_MS=600
GPT_MAX_CHARS=280
GPT_MAX_VOCAB=10
GPT_COMPRESS_ELONGATIONS=false
GPT_CLEAN_REPEATS=true
GPT_SKIP_ON_REPEAT=false
LINE4_TABLE_MODE=false
JP_VERBATIM=false

DEEPL_API_KEY=xxx
# ASR backend
# Options: openai | remote | local
# For OpenAI Whisper (whisper-1):
WHISPER_MODEL=whisper-1

# If using a self-hosted whisper server, uncomment these and set backend to 'remote'
REMOTE_ASR_URL=http://192.168.1.12:8585/api/transcribe

# Audio capture and VAD
TARGET_DEVICE=BlackHole
VAD_LEVEL=1
SILENCE_HANG_MS=500
MIN_CHUNK_SEC=0.2
MAX_CHUNK_SEC=4.0
CHUNK_OVERLAP_MS=200
CAPTURE_ALL=true

# GPT formatter
# For two-line GPT output (colored JP + EN)
OPENAI_MODEL=gpt-4.1-nano-2025-04-14
USE_GPT_FORMATTER=true
GPT_COMPRESS_ELONGATIONS=false
GPT_MAX_VOCAB=10
GPT_MAX_CHARS=280
GPT_RATE_LIMIT_MS=600
GPT_CLEAN_REPEATS=true
GPT_SKIP_ON_REPEAT=false
LINE4_TABLE_MODE=false
JP_VERBATIM=false
SUGGESTIONS_ENABLED=true
JISHO_REMOTE_ENABLED=true 
# Concurrency/timeouts
ASR_WORKERS=3
FORMAT_WORKERS=8
REMOTE_ASR_TIMEOUT_MS=15000


SHOW_VOCAB_LINE=true
SHOW_DETAILS_LINE=true
SHOW_ASR_DEBUG=true



  # Enhanced vocabulary analysis with ChatGPT
USE_GPT_VOCAB_ANALYSIS=true        # Enable/disable 
GPT_VOCAB_RATE_LIMIT_MS=1000       # Rate limiting 
GPT_VOCAB_BATCH_SIZE=8             # Number of words